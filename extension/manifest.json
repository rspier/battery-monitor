{
    "name": "Battery Monitor",
    "version": "0.01.0.0005",
    "description": "Report laptop battery status to a server which can push to Prometheus for graphing and alerting!",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "browser_action": {
        "default_title": "Battery Monitor",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage", "alarms", "notifications"
     ],
    "manifest_version": 2,
    "icons": {
        "128": "icon128.png"
    },
    "options_page": "options.html"
}
